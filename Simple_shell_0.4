#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>
#include <string.h>

#define BUFFER_SIZE 1024
#define TOKEN_DELIMITERS " \t\n"
#define PATH_MAX_LENGTH 1024

int main(void) {
    char *buffer;
    size_t bufsize = BUFFER_SIZE;
    ssize_t characters;

    buffer = (char *)malloc(bufsize * sizeof(char));
    if (buffer == NULL) {
        perror("Unable to allocate buffer");
        exit(1);
    }

    while (1) {
        printf("$ ");
        characters = getline(&buffer, &bufsize, stdin);
        if (characters == -1) {
            perror("Error reading input");
            exit(1);
        }

        // Remove trailing newline character
        buffer[strcspn(buffer, "\n")] = '\0';

        // Tokenize input
        char *token;
        char *args[BUFFER_SIZE];
        int arg_count = 0;

        token = strtok(buffer, TOKEN_DELIMITERS);
        while (token != NULL) {
            args[arg_count++] = token;
            token = strtok(NULL, TOKEN_DELIMITERS);
        }
        args[arg_count] = NULL;

        // Check for built-in commands
        if (strcmp(args[0], "exit") == 0) {
            // Exit the shell
            exit(0);
        }

        // Fork a child process
        pid_t pid = fork();

        if (pid == -1) {
            perror("Fork failed");
            exit(1);
        } else if (pid == 0) {
            // Child process
            // Get the PATH environment variable
            char *path = getenv("PATH");
            if (path == NULL) {
                perror("Unable to get PATH");
                exit(1);
            }

            // Tokenize PATH to search for executable
            char *path_token;
            char path_copy[PATH_MAX_LENGTH];
            strcpy(path_copy, path);

            path_token = strtok(path_copy, ":");
            while (path_token != NULL) {
                char path_command[PATH_MAX_LENGTH];
                strcpy(path_command, path_token);
                strcat(path_command, "/");
                strcat(path_command, args[0]);

                // Try to execute the command
                if (execv(path_command, args) != -1) {
                    exit(0); // Successful execution
                }

                path_token = strtok(NULL, ":");
            }

            // If command not found in any path
            fprintf(stderr, "%s: command not found\n", args[0]);
            exit(1);
        } else {
            // Parent process
            wait(NULL);
        }
    }

    free(buffer);
    return 0;
}

