#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

int main(int argc, char *argv[]) {
    char *path = NULL;
    if (argc == 1) {
        // No arguments provided, change directory to HOME
        path = getenv("HOME");
    } else if (argc == 2) {
        // Argument provided, change directory to specified path
        path = argv[1];
    } else {
        fprintf(stderr, "Usage: %s [DIRECTORY]\n", argv[0]);
        exit(1);
    }

    if (chdir(path) == -1) {
        perror("chdir failed");
        exit(1);
    }

    // Update the environment variable PWD
    if (setenv("PWD", path, 1) == -1) {
        perror("setenv failed");
        exit(1);
    }

    return 0;
}

